{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hidden-innovation/auth": ["libs/auth/src/index.ts"],
      "@hidden-innovation/change-password": [
        "libs/change-password/src/index.ts"
      ],
      "@hidden-innovation/dashboard": ["libs/dashboard/src/index.ts"],
      "@hidden-innovation/environment": ["libs/environment/src/index.ts"],
      "@hidden-innovation/forgot-password": [
        "libs/forgot-password/src/index.ts"
      ],
      "@hidden-innovation/libs/ui/login/login": [
        "libs/libs/ui/login/login/src/index.ts"
      ],
      "@hidden-innovation/material": ["libs/material/src/index.ts"],
      "@hidden-innovation/reset-password": ["libs/reset-password/src/index.ts"],
      "@hidden-innovation/shared/form-config": [
        "libs/shared/form-config/src/index.ts"
      ],
      "@hidden-innovation/shared/models": ["libs/shared/models/src/index.ts"],
      "@hidden-innovation/shared/store": ["libs/shared/store/src/index.ts"],
      "@hidden-innovation/shared/ui/auth-layout": [
        "libs/shared/ui/auth-layout/src/index.ts"
      ],
      "@hidden-innovation/shared/ui/prompt-dialog": [
        "libs/shared/ui/prompt-dialog/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
